<%- include('partials/head') %>

    
<div class="h-screen w-full bg-white relative flex overflow-hidden">
    <%- include('partials/sidebar') %>
      <div class="w-full h-full flex flex-col justify-between">
        <header class="h-16 w-full flex items-center relative justify-end px-5 space-x-10 bg-slate-900">    
            <%- include('partials/header') %> 
        </header>
        <main class="max-w-full h-full flex relative overflow-y-hidden">                      
          <div class=" bg-gradient-to-r from-slate-900 via-slate-600 to-slate-900 h-full w-full m-4 flex flex-wrap items-center justify-center rounded-tl grid-flow-col auto-cols-max gap-4 overflow-y-scroll">
            
            <!-- <form action="/welcome/:userId" method="post">
                <input type="hidden" name="userId" value="your user here">
                <button type="submit">Go to other page</button>
            </form> -->

            <div class=" flex items-center justify-center  px-44 py-24 ">
                <div class="w-full h-3/4 bg-gray-100 text-gray-500 rounded-3xl shadow-2xl  border-2 border-gray-900 overflow-hidden" >
                    <div class="md:flex ">
                        <div class="h-1/2 object-cover md:block w-1/2 sm:w-fit bg-gray-700 px-2 py-6 ">
                          <img  className="object-cover w-auto h-auto ml-8 my-2 shadow-[2px_5px_30px_5px_black] sm:mr-12 md:mr-12" src="/images/first.jpg" alt=""  />
                        </div>
                        <div class="w-full md:w-1/2 py-10 px-5 md:px-10">
                            <div class="text-center mb-10">  
                                <h1 class="font-bold text-3xl text-gray-900">LOGIN</h1>
                                <p>Enter your information to login</p>
                            </div>
                            <form action='/login' method='POST'  >
                                <div class="flex -mx-3">
                                    <div class="w-full px-3 mb-2">
                                        <label for="" class="text-xs font-semibold px-1 ">Email</label>
                                        
                                            <div class="w-10 z-10 pl-1 text-center pointer-events-none flex items-center justify-center"></div>
                                            <input type="email"  name="username"   class="w-full  pl-10 pr-3 py-2 rounded-lg border-2 border-gray-200 outline-none focus:border-indigo-500" placeholder="johnsmith@example.com"/>
                                        
                                    </div>
                                </div>
                                <div class="flex -mx-3">
                                    <div class="w-full px-3 mb-12">
                                        <label for="" class="text-xs font-semibold px-1">Password</label>
                                        <div class="flex">
                                            <div class="w-10 z-10 pl-1 text-center pointer-events-none flex items-center justify-center"></div>
                                            <input type="password" name="password"   class="w-full -ml-10 pl-10 pr-3 py-2 rounded-lg border-2 border-gray-200 outline-none focus:border-indigo-500" placeholder="************"/>
                                        </div>
                                    </div>
                                </div>
                                <div class="flex -mx-3">
                                    <div class="w-full px-3 mb-2">
                                        <button type='submit' class="block w-full max-w-xs mx-auto bg-gray-700 hover:bg-indigo-700 focus:bg-indigo-700 text-white rounded-lg px-3 py-3 font -my-6  semibold ">LOGIN</button>
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
          </div>
            

          
            </div>
        </main>
      </div>
  </div>





